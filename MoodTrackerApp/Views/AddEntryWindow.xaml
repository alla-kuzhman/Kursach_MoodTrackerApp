<Window x:Class="MoodTrackerApp.Views.AddEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoodTrackerApp.Views"
        mc:Ignorable="d"
        Title="Добавить запись о настроении" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--<summary>
        Дата
        </summary>-->
        <TextBlock Text="Дата:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
        <DatePicker x:Name="DataPicker" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>
        <!--<summary>
        Время
        </summary>-->
        <TextBlock Text="Время:" Grid.Row="1" Grid.Column="0" Margin="0,10,10,5"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10,10,5">
            <ComboBox x:Name="HourComoboBox" Width="60" Margin="0,0,5,0"/>
            <TextBlock Text=":" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="MinuteComboBox" Width="60"/>
        </StackPanel>
        <!--<summary>
        Настроение: список
        </summary>-->
        <TextBlock Text="Настроение:" Grid.Row="2" Grid.Column="0" Margin="0,10,10,5"/>
        <ComboBox x:Name="MoodComboBox" Grid.Row="2" Grid.Column="1" Margin="0,10,0,5">
            <ComboBoxItem Content="Ужасное" Tag="1"/>
            <ComboBoxItem Content="Плохое" Tag="2"/>
            <ComboBoxItem Content="Нормальное" Tag="3"/>
            <ComboBoxItem Content="Хорошее" Tag="4"/>
            <ComboBoxItem Content="Отличное" Tag="5"/>
        </ComboBox>
        <!--<summary>
        Блок: заметки
        </summary>-->
        <TextBlock Text="Заметки:" Grid.Row="3" Grid.Column="0" Margin="0,10,10,0"/>
        <TextBox x:Name="NotesTextBox" Grid.Row="3" Grid.Column="1" Margin="0,10,0,0" 
                 TextWrapping="Wrap" AcceptsReturn="True" Height="100"/>
        <!--<summary>
        Кнопки
        </summary>-->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Отмена" Width="80" Click="Cancel_Click"/>
        </StackPanel>


    </Grid>
</Window>
